@using System.Collections.Generic
@using System.Diagnostics
@using System.Linq
@using System.Threading.Tasks
@using System
@using ATIVIDADE_1
@model List<ItemPedido>

    <h2>Listagem de Pedidos</h2>
    <table border="2">
      <thead>
       <tr>
           <th>Descrição</th>
       
       
       </tr>
       </thead>

       <tbody>
           @foreach (ItemPedido item in Model)
           {
               
               <tr>
                   <td>@item.descrição</td>
               </tr>
           }
       </tbody>
    </table>

    <p>Total dos pedidos é: @Dados.PedidoAtual.FinalizarPedido()</p>
    